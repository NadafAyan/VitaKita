rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Resources collection
    match /resources/{resourceId} {
      allow read: if isSignedIn();
      allow write: if false; 
    }

    // Forum Posts collection
    match /forum_posts/{postId} {
      allow read, create: if isSignedIn();
      // Allow update if the user is the owner OR if ONLY supportCount is changing
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['supportCount']))
      );
      allow delete: if isOwner(resource.data.userId);
    }

    // Chats collection
    match /chats/{userId} {
      allow read, write: if isOwner(userId);
    }
    match /chats/{userId}/messages/{messageId} {
      allow read, write: if isOwner(userId);
    }

    // Counselors collection
    match /counselors/{counselorId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read, write: if isSignedIn() && (
        resource == null || // Allow create
        resource.data.userId == request.auth.uid || 
        request.resource.data.userId == request.auth.uid
      );
    }
  }
}
