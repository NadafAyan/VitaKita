rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection: only owners can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Resources collection: readable by all signed-in users, writable only by admins
    match /resources/{resourceId} {
      allow read: if isSignedIn();
      allow write: if false; // Admin-only via Firebase Console/Cloud Functions
    }

    // Forum Posts collection: readable by all signed-in users, writable by owners
    match /forum_posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Chats collection: only owners can access their chat history
    match /chats/{userId} {
      allow read, write: if isOwner(userId);
      
      match /messages/{messageId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Counselors collection: readable by all signed-in users
    match /counselors/{counselorId} {
      allow read: if isSignedIn();
      allow write: if false; // Admin-only
    }

    // Sessions collection: only owners can read/write their sessions
    match /sessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
  }
}
